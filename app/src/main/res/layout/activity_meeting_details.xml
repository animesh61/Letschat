<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="0.8"
                android:fontFamily="@font/montserrat_regular"
                android:text="Meeting Details"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_edit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_when"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_video">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="When"
                android:layout_weight="0.8"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="08/07/21, 9:30 PM"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/ic_right_arrow"
                android:textSize="@dimen/_14sdp"
                android:textColor="#22B0FC"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_video">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Title"
                android:layout_weight="0.8"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Test Meeting"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/ic_right_arrow"
                android:textSize="@dimen/_14sdp"
                android:textColor="#22B0FC"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_meeting_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_video">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Meeting Id"
                android:layout_weight="0.8"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="123 456 789"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/ic_right_arrow"
                android:textSize="@dimen/_14sdp"
                android:textColor="#22B0FC"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_duration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_video">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Duration"
                android:layout_weight="0.8"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="60 mins"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/ic_right_arrow"
                android:textSize="@dimen/_14sdp"
                android:textColor="#22B0FC"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_passcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_video">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Passcode"
                android:layout_weight="0.8"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="w1tddf21"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/ic_right_arrow"
                android:textSize="@dimen/_14sdp"
                android:textColor="#22B0FC"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_10sdp"
                />



        </LinearLayout>
        <Button
            android:id="@+id/btn_join_meeting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Start Meeting"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_meeting"/>
        <Button
            android:id="@+id/btn_add_to_calander"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Add to Calander"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_16sdp"
            android:textColor="#22B0FC"
            android:background="@drawable/rectangle_calander"/>

        <Button
            android:id="@+id/btn_invite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Invite"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_16sdp"
            android:textColor="#22B0FC"
            android:background="@drawable/rectangle_calander"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_16sdp"
            android:textColor="#22B0FC"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:text="Delete Meeting"/>

    </LinearLayout>

</LinearLayout>