<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textColor="@color/black"
        android:textSize="@dimen/_28sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter 6 digit verification code, which have sent to your registered email address."
            android:textColor="#707070"
            android:textSize="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_otp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:paddingLeft="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rectangle_email"/>
            <EditText
                android:id="@+id/et_otp1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_weight="0.2"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangle_email"/>
            <EditText
                android:id="@+id/et_otp2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:paddingLeft="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangle_email"/>
            <EditText
                android:id="@+id/et_otp3"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:paddingLeft="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangle_email"/>
            <EditText
                android:id="@+id/et_otp4"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:paddingLeft="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangle_email"/>
            <EditText
                android:id="@+id/et_otp5"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:paddingLeft="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangle_email"/>

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Verify"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_meeting"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:textColor="#22B0FC"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_gravity="center"/>




</LinearLayout>