<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_30sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_seeting_profile"/>
            <ImageView
                android:id="@+id/iv_camera_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"/>

        </FrameLayout>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_editname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Name"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_department"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Department"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_job_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Job Title"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Company"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Location"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_regular"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Phone"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_language"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Language"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_edit_timezone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:hint="Time Zone"
            android:textSize="@dimen/_14sdp"
            android:textColor="#9097A5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#9097A5"
            android:background="@drawable/rectangle_email"/>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Update"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_meeting"/>





    </LinearLayout>
    </ScrollView>

</LinearLayout>